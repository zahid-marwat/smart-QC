{
  "name": "Object Detection QC",
  "version": "1.0.0",
  "description": "Quality control configuration for object detection annotations",
  "type": "object_detection",
  "attributes": [
    {
      "name": "confidence_score",
      "type": "number",
      "min": 0,
      "max": 1,
      "step": 0.01,
      "description": "Confidence score of the detection (0-1)",
      "default": 0.5
    },
    {
      "name": "visibility",
      "type": "select",
      "options": ["fully_visible", "partially_occluded", "heavily_occluded"],
      "description": "Visibility level of the object",
      "default": "fully_visible"
    },
    {
      "name": "quality_rating",
      "type": "select",
      "options": ["excellent", "good", "fair", "poor"],
      "description": "Overall quality rating of the annotation",
      "default": "good"
    },
    {
      "name": "annotation_accuracy",
      "type": "select",
      "options": ["precise", "approximate", "poor"],
      "description": "Accuracy of the bounding box annotation",
      "default": "precise"
    },
    {
      "name": "verified_by",
      "type": "text",
      "description": "Name or ID of the person who verified this annotation",
      "default": ""
    },
    {
      "name": "review_date",
      "type": "date",
      "description": "Date when the annotation was reviewed",
      "default": ""
    },
    {
      "name": "review_notes",
      "type": "textarea",
      "description": "Additional notes about the annotation quality",
      "default": ""
    },
    {
      "name": "needs_revision",
      "type": "select",
      "options": ["yes", "no"],
      "description": "Whether this annotation needs to be revised",
      "default": "no"
    },
    {
      "name": "difficulty_level",
      "type": "select",
      "options": ["easy", "medium", "hard", "very_hard"],
      "description": "Difficulty level of annotating this object",
      "default": "medium"
    },
    {
      "name": "lighting_condition",
      "type": "select",
      "options": ["good", "poor", "artificial", "natural", "mixed"],
      "description": "Lighting conditions in the image",
      "default": "good"
    }
  ],
  "validation_rules": [
    {
      "field": "confidence_score",
      "rule": "required",
      "message": "Confidence score is required"
    },
    {
      "field": "quality_rating",
      "rule": "required",
      "message": "Quality rating is required"
    },
    {
      "field": "verified_by",
      "rule": "required",
      "message": "Verifier name is required"
    }
  ],
  "export_options": {
    "include_images": true,
    "include_original_annotations": true,
    "include_qc_attributes": true,
    "formats": ["json", "csv", "excel"]
  }
}
