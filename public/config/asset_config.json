{
  "qc_types": {
    "bb_qc": {
      "name": "BB QC",
      "description": "Bounding Box Quality Control",
      "file_format": "xml",
      "asset_types": {
        "light_poles": {
          "name": "Light Poles",
          "description": "Street and area lighting infrastructure",
          "attributes": {

            "Functionality": {
              "type": "select",
              "label": "Functionality",
              "options": ["1", "2", "3", "4", "NA"],
              "required": true,
              "default" : "1"
            },


            "Defect_Type": {
              "type": "select",
              "label": "Defect_Type",
              "options": [
                    "No Defect",
                    "Slightly Misaligned and or damaged up to 10% and or deteriorated/corrosion 10%",
                    "Misaligned and or damaged up to 20% and or deteriorated/corrosion 20%",
                    "Misaligned and or damaged up to 40% and or deteriorated/corrosion 40%" ,
                    "Light pole is completely damaged and or deteriorated" , 
                    "Not Available"],
              "required": true,
              "default" : "No Defect"
            },

            "Road_side_location": {
              "type": "select",
              "label": "road_side_location",
              "options": [
                    "Median",
                    "Left",
                    "Right"
             ],
             "required": false,
             "default" : "Median"
            }
          }
        },



        "manholes_catch_basins": {
          "name": "Manholes & Catch Basins",
          "description": "Drainage and utility access infrastructure",
          "attributes": {


            "Functionality": {
              "type": "select",
              "label": "Functionality",
              "options": ["1", "2", "3", "4", "5" , "6" , "7" , "8" ,  "Not_Available"],
              "required": true,
              "default" : "1"
            },
            
            
            "Appearance": {
              "type": "select",
              "label": "Appearance",
              "options": ["1", "2", "3", "4", "Not_Available"],
              "required": true,
              "default" : "1"
            },
  
            "Conver_Width(catch_basin)": {
              "type": "select",
              "label": "Conver_Width",
              "options": [ 
                    "0.5",
                    "1", 
                    "1.5" ],
              "required": true,
              "default" : "0.5"
            },
  
            "Conver_Length(catch_basin)": {
              "type": "select",
              "label": "Conver_Length",
              "options": [ 
                    "0.5",
                    "1", 
                    "1.5" ],
              "required": true,
              "default" : "0.5"
            },
              
            "Defect Type(catch_basin)": {
              "type": "select",
              "label": "defect_type",
              "options": [
                "No Defect Found",
                "Paint Deteriorated and or Rusted Catch Basin", 
                "Catch Basin Cover Misaligned / Deteriorated",
                "Catch Basin Filled with Sand",
                "Concrete Deteriorated",
                "Catch Basin Cover / Grating Missing or Damaged"
               ] ,
              "required": true,
              "default" : "No Structural or Paint Deterioration"
            }
              

          }
        },



        "pavement_markings": {
          "name": "Pavement Markings",
          "description": "Road surface markings and signage",
          "attributes": {

            
            "Tree_Obstruction": {
              "type": "select",
              "label": "tree_obstruction",
              "options": ["No", "yes"],
              "default": "No",
              "required": true
            },
            
            
            "visibility": {
              "type": "select",
              "label": "Visibility",
              "options": [   
                "1",
                "2", 
                "3", 
                "4" ],
                "default": "Not Available",
                "required": true
            },

            "Presence": {
              "type": "select",
              "label": "presence",
              "options": [   
                "1",
                "2", 
                "3", 
                "4" ],
              "default": "Not Available",
              "required": true
            }

          }



        },
        "road_humps": {
          "name": "Road Humps",
          "description": "Speed control devices and traffic calming measures",
          "attributes": {


            "Structure_Condition": {
              "type": "select",
              "label": "structure_condition",
              "options": ["1", "2", "3", "4", "Not Available"],
              "default": "1",
              "required": true
            },
            
            
            "Paint_Condition": {
              "type": "select",
              "label": "paint_condition",
              "options": [  "1",
              "2", 
              "3", 
              "4" ,
              "Not Available"    ],
              "default": "1",
              "required": true
            },
            
            
            "Marking_Type": {
              "type": "select",
              "label": "marking_type",
              "options": [
                "Yes (Full Marking)",
                "Yes (Half Marking)", 
                "No Marking" ],
              "default": "No Marking",
              "required": false
            },
            
            
            "Signalized": {
              "type": "select",
              "label": "signalized",
              "options": ["No" ,"Yes"],
              "default": "No",
              "required": false
            },
           
           
            "Flasher": {
              "type": "select",
              "label": "flasher",
              "options": ["No" ,"Yes"],
              "default": "No",
              "required": false
            },
            
            
            "Material_Type": {
              "type": "select",
              "label": "rh_material_type",
              "options": [
                "Asphalt",
                "Concrete", 
                "Rubber", 
                "Other"],
              "default": "Asphalt",
              "required": false
            },


            "Defect_Type": {
              "type": "select",
              "options": [
                    "No Structural or Paint Deterioration",
                    "Road Hump with Depression or any other Deterioration", 
                    "Paint Faded or Deteriorated of the Road hump ",
                    "Not Available"],
              "default": "No Structural or Paint Deterioration",
              "required": false
            }


          }
        }
      }
    },


    "seg_qc": {
      "name": "Seg QC",
      "description": "Segmentation Quality Control",
      "file_format": "json",
      "asset_types": {


        "curb_stones": {
          "name": "Curb Stones",
          "description": "Road edge and boundary structures",
          "attributes": {
            
            "Group_ID": {
              "type": "text",
              "label": "Group_ID",
              "pattern": "^[0-9]+$",
              "description": "Enter a Group ID",
              "required": true,
              "auto_suffix": true,
              "suffix_text": "CS_",
              "default": "CS_NA"

            },

            "Functionality": {
              "type": "select",
              "label": "Functionality",
              "options": ["1", "2", "3", "4", "5" , "Unclear"],
              "required": true,
              "default" : "1"
            },

            "Appearance": {
              "type": "select",
              "label": "Appearance",
              "options": ["1", "2", "3", "4", "Unclear"],
              "required": true,
              "default" : "1"
            },
            
            "Concrete_casting": {
              "type": "select",
              "label": "Concrete_casting",
              "options": ["Precast", "Castin_situ"],
              "required": true,
              "default" : "Precast"
            },
            

            "Curb_color": {
              "type": "select",
              "label": "Curb_color",
              "options": ["Black & White",
                          "Black & Yellow",
                          "Black & Red",
                          "Black & Amber",
                          "White & Amber",
                          "White & Green",
                          "Yellow & Green",
                          "Yellow & Gray",
                          "Mawaqif (Blue & Black)",
                          "Unpainted",
                          "Yellow & Amber",
                          "Gray",
                          "Other"],
              "required": true,
              "default": "Black & Yellow"
            },


            "Defect_Type": {
              "type": "select",
              "label": "Defect_Type",
              "options": ["No Defect",
                          "Paint Peeled off",
                          "Curb Stones Misaligned",
                          "Curb Stones Damaged",
                          "Totally Missing Curb Stones"
              ],
              "required": true,
              "default" : "No Defect"

            },

            "Road_side_location": {
              "type": "select",
              "label": "road_side_location",
              "options": [
                    "Median",
                    "Left",
                    "Right"
             ],
             "required": false,
             "default" : "Median"
            },
            
            "notes": {
              "type": "textarea",
              "label": "Additional Notes",
              "placeholder": "Any additional observations...",
              "required": false
            }
          }
        },




        "footpaths": {
          "name": "Footpaths",
          "description": "Pedestrian walkways and sidewalks",
          "attributes": {

            "Group_ID": {
              "type": "text",
              "label": "Group_ID",
              "pattern": "^[0-9]+$",
              "description": "Enter a Group ID",
              "required": true,
              "auto_suffix": true,
              "suffix_text": "FP_",
              "default": "FP_NA"

            },

            "Functionality": {
              "type": "select",
              "label": "Functionality",
              "options": ["1", "2", "3", "4", "5" , "6" , "7" ,  "Unclear"],
              "required": true,
              "default" : "1"
            },
            

            "color": {
              "type": "select",
              "label": "Color",
              "options": ["Red","Grey","Red & Grey","Other"],
              "required": true,
              "default": "Grey"
            },


            "Defect_Type": {
              "type": "select",
              "label": "Defect_Type",
              "options": ["Depression / Settlement",
                          "Missing Pavers (or any other surface)",
                          "Damaged Pavers (or any other surface)",
                          "Missing Pavers (or any other surface)",
                          "Weathered Pavers (or any other surface)",
                          "No Defect"],
              "required": true,
              "default" : "No Defect"

            },

            "Road_side_location": {
              "type": "select",
              "label": "road_side_location",
              "options": [
                    "Median",
                    "Left",
                    "Right"
             ],
             "required": false,
             "default" : "Right"
            },
            
            "notes": {
              "type": "textarea",
              "label": "Additional Notes",
              "placeholder": "Any additional observations...",
              "required": false
            }
          }
        },




        "lane_markings": {
          "name": "Lane Markings",
          "description": "Road lane delineation and traffic guidance",
          "attributes": {

            "Group_ID": {
              "type": "text",
              "label": "Group_ID",
              "pattern": "^[0-9]+$",
              "description": "Enter a Group ID",
              "required": true,
              "auto_suffix": true,
              "suffix_text": "LM_",
              "default": "LM_NA"

            },

            "Presence": {
              "type": "select",
              "label": "Presence",
              "options": ["1", "2", "3", "4","unclear"],
              "required": true,
              "default": "1"
            },
            
            
            "Road_Surface_Type": {
              "type": "select",
              "label": "Road_Surface_Type",
              "options": ["Asphalt", "Concrete","Other"],
              "required": true,
              "default": "Asphalt"
            },
            
            
            "Road_classification": {
              "type": "select",
              "label": "Road_classification",
              "options": ["Urban Highway", "Freeway", "Residential Road", "Other"],
              "required": true,
              "default": "Urban Highway"
            },


            "notes": {
              "type": "textarea",
              "label": "Additional Notes",
              "placeholder": "Any additional observations...",
              "required": false
            }
          }
        }
      }
    }
  }
}
